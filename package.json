    "@types/sinon-chai": "^3.2.12",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^7.11.0",
    "@typescript-eslint/parser": "^7.11.0",
    "chai": "^4.0.0",
    "eslint": "^8.57.0",
    "eslint-config-airbnb": "^19.0.4",
    "husky": "^9.0.11",
    "less": "^4.2.0",
    "mocha": "^10.5.2",
    "stylelint": "^16.6.1",
    "stylelint-config-standard": "^36.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.2.2",
    "vite": "^5.2.0"
  },
  "dependencies": {
    "bootstrap-icons": "^1.11.3",
    "handlebars": "^4.7.8",
